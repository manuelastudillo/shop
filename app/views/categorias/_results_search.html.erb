<table class="table">
 <thead>
  <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Nombre</th>
   <th>Descripción</th> 
   <th>Fecha de Alta</th>
   <th>Fecha de Modificación</th>
   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="categorias">
   <% @categorias.each do |categoria| %>
    <tr>
     <td><%= categoria.nombre %></td>
     <td><%= categoria.descripcion %></td> 
     <td><%= categoria.created_at.strftime("%d/%m/%Y") %></td>
     <td><%= categoria.updated_at.strftime("%d/%m/%Y") %></td>
       <td>
      <%= button_to categoria_path(categoria), {method: :get, class: "btn btn-info"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Mostrar
      <% end %>
     </td>
     <td>
      <%= button_to editar_categoria_path(categoria), {method: :get, class: "btn btn-warning"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %>
     </td>
     <td>
      <%= button_to categoria, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>